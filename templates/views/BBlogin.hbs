<!DOCTYPE html>
<html lang="en">

<head>
    <title>Blood bank login</title>
    {{>login_header}}
</head>

<body>
    {{>navbar}}
      <div class="login">
      <div class="wrapper">
        <div class="title"><span>Blood bank Login</span></div>
        <form action="/BloodBanklogin" method="POST" role="form" enctype="application/x-www-form-urlencoded">
          <div class="row">
            <i class="fas fa-user"></i>
            <input type="text" name="userName" placeholder="User name" required>
          </div>
          <div class="row">
            <i class="fas fa-lock"></i>
            <input type="password" name="password" placeholder="Password" required>
          </div>
          <div class="pass"><a href="#">Forgot password?</a></div>
          <div class="row button">
            <input type="submit" value="Login">
          </div>
          <div class="signup-link">Not a registered Blood bank? <a href="/bloodbankReg">Register now at RedLife</a></div>
        </form>
      </div>
    </div>
    {{>footer}}
    {{>chat}}
    {{!-- javascript files linked --}}
    <script src="javascripts/chat.js"></script>
    <script src="javascripts/responses.js"></script>
    <script src="javascripts/dashboard_counter.js"></script>
    <script src="javascripts/bootstrap.min.js"></script>
    <script src="javascripts/wow.js"></script>
    <script src="javascripts/script.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
        crossorigin="anonymous"></script>
</body>

</html>